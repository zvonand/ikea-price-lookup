{
  "manifest_version": 3,
  "name": "Ikea Price Compare",
  "version": "0.0.7",
  "description": "Compare IKEA prices in different countries",
  "browser_specific_settings": {
    "gecko": {
      "id": "ikealookup@example.com",
      "data_collection_permissions": {
        "required": ["websiteActivity"],
        "optional": []
      }
    }
  },
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.ikea.com/*", "*://ikea.com/*"],
      "js": ["config.js", "price-lookup.js"]
    }
  ]
}
